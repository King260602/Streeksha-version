<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:fontFamily="@font/sitka"
        android:textColor="#fff"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:textAllCaps="true"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/quote"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="@string/quote"
        android:fontFamily="@font/ebrima"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/fourfeatures"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/openlocationact"
            android:src="@drawable/ic_location_on_black_24dp"
            app:fabCustomSize="60dp"
            android:elevation="10dp"
            app:borderWidth="0dp"
            android:layout_margin="10dp"
            android:backgroundTint="#fff"
            app:rippleColor="#fd585d"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sos_msg_send"
            android:src="@drawable/ic_message_black_24dp"
            app:fabCustomSize="60dp"
            app:borderWidth="0dp"
            android:elevation="10dp"
            app:rippleColor="#fd585d"
            android:layout_margin="10dp"
            android:backgroundTint="#fff"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/video_stream"
            android:src="@drawable/ic_videocam_black_24dp"
            app:fabCustomSize="60dp"
            android:elevation="10dp"
            app:rippleColor="#fd585d"
            app:borderWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="10dp"
            android:backgroundTint="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fake_caller"
            android:src="@drawable/ic_call_black_24dp"
            app:fabCustomSize="60dp"
            android:elevation="10dp"
            app:borderWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            app:rippleColor="#fd585d"
            android:layout_margin="10dp"
            android:backgroundTint="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/crimemap_lay"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/crime_mapping"
            android:src="@drawable/ic_map_black_24dp"
            app:fabCustomSize="60dp"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true"
            app:borderWidth="0dp"
            app:rippleColor="#fd585d"
            android:layout_margin="10dp"
            android:backgroundTint="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/btn_act_lay"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_alerting"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="ALERT"
            android:background="@drawable/gradient_activate_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>